<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover">
    <title>hizliyim.com - Ultimate</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;900&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/lucide@latest"></script>

    <style>
        :root { --brand: #027AFF; }
        body { background: #050505; color: white; font-family: 'Inter', sans-serif; overflow-x: hidden; margin: 0; padding: 0; }
        
        /* GLOBAL LOADER: Sayfa yÃ¼klenene kadar her ÅŸeyi kapatÄ±r */
        #global-loader {
            position: fixed; inset: 0; background: #000; z-index: 9999;
            display: flex; flex-direction: column; justify-content: center; align-items: center;
        }
        
        /* Ana Ä°Ã§erik */
        main { 
            width: 100%; min-height: 100dvh; /* Mobile viewport fix */
            display: flex; flex-direction: column; position: relative; z-index: 10;
        }

        .page-content { flex: 1; display: flex; align-items: flex-start; justify-content: center; padding: 1.5rem; width: 100%; }
        .page-center { align-items: center; } /* Login/Register ortalÄ±ÄŸÄ± iÃ§in */

        .glass-card { 
            background: rgba(15, 15, 20, 0.95); backdrop-filter: blur(20px);
            border: 1px solid rgba(255,255,255,0.08); border-top: 1px solid rgba(255,255,255,0.15);
            border-radius: 24px; box-shadow: 0 20px 60px rgba(0,0,0,0.8);
            width: 100%; position: relative; z-index: 20;
        }

        .logo-text { font-weight: 900; background: linear-gradient(to right, #fff, #00f3ff, #fff); -webkit-background-clip: text; color: transparent; background-size: 200%; animation: shine 4s linear infinite; letter-spacing: -1px; }
        @keyframes shine { to { background-position: -200% center; } }

        .input-field { background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.1); color: white; padding: 14px; border-radius: 14px; width: 100%; outline: none; transition: 0.3s; font-size: 0.9rem; }
        .input-field:focus { border-color: var(--brand); background: rgba(2,122,255,0.05); }
        
        .btn-primary { 
            background: var(--brand); padding: 14px; border-radius: 14px; width: 100%; font-weight: 800; text-transform: uppercase; letter-spacing: 1px; 
            position: relative; overflow: hidden; cursor: pointer; transition: 0.2s; border: none; color: white;
        }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 10px 20px rgba(2,122,255,0.3); }
        .btn-primary::after { content:''; position:absolute; top:0; left:-150%; width:100%; height:100%; background:linear-gradient(90deg,transparent,rgba(255,255,255,0.4),transparent); transform:skewX(-20deg); animation: btnShine 3s infinite; }
        @keyframes btnShine { 0%{left:-150%} 20%{left:150%} 100%{left:150%} }

        #particles { position: fixed; inset: 0; pointer-events: none; z-index: 1; }
        .particle { position: absolute; border-radius: 50%; mix-blend-mode: screen; filter: blur(60px); opacity: 0.4; animation: float 10s infinite alternate; }
        @keyframes float { 0% { transform: translate(0,0); } 100% { transform: translate(30px, -30px); } }

        .spinner { width: 40px; height: 40px; border: 4px solid rgba(255,255,255,0.1); border-top-color: var(--brand); border-radius: 50%; animation: spin 0.8s linear infinite; }
        @keyframes spin { to { transform: rotate(360deg); } }

        .nav-fixed { position: fixed; top: 0; left: 0; right: 0; z-index: 50; background: rgba(0,0,0,0.8); backdrop-filter: blur(20px); border-bottom: 1px solid rgba(255,255,255,0.05); padding: 0.8rem 1rem; }
        
        /* Scrollbar */
        ::-webkit-scrollbar { width: 6px; }
        ::-webkit-scrollbar-thumb { background: #333; border-radius: 10px; }
    </style>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInWithEmailAndPassword, createUserWithEmailAndPassword, signOut, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, collection, addDoc, doc, setDoc, getDoc, getDocs, updateDoc, query, orderBy, serverTimestamp, deleteDoc, where, runTransaction } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        
        const firebaseConfig = {
            apiKey: "AIzaSyCP0Rd8CAfzYRPtakfdQWBqS5uBn045XpE",
            authDomain: "hizliyimforum.firebaseapp.com",
            databaseURL: "https://hizliyimforum-default-rtdb.firebaseio.com",
            projectId: "hizliyimforum",
            storageBucket: "hizliyimforum.firebasestorage.app",
            messagingSenderId: "903963422468",
            appId: "1:903963422468:web:936c368393585efd0cea51"
        };

        const app = initializeApp(firebaseConfig);
        const db = getFirestore(app);
        const auth = getAuth(app);

        // CONFIG
        const SUPER_USER = "alicelik";
        const SUPER_PASS = "alikingytyt6565";
        const SECURITY_CODE = "220208Ä°RM";
        const SUPER_EMAIL = "alicelik@hizliyim.com"; 
        const SESSION_TIMEOUT = 24 * 60 * 60 * 1000; 

        // STATE
        let currentUserData = null;
        let appInitialized = false; // BU KÄ°LÄ°T NOKTA
        let debounceTimer;

        // --- YARDIMCI FONKSÄ°YONLAR ---
        function formatDate(timestamp) {
            if(!timestamp) return '';
            return new Date(timestamp.seconds * 1000).toLocaleString('tr-TR', { day: 'numeric', month: 'short', hour: '2-digit', minute:'2-digit' });
        }

        async function logAction(type, uid, email, details = "") {
            try { await addDoc(collection(db, "logs"), { type, uid, email, details, ua: navigator.userAgent, ts: serverTimestamp() }); } catch(e){}
        }

        // --- GLOBAL ACTIONS ---
        window.handleLogout = async () => {
            document.getElementById('global-loader').style.display = 'flex'; // Ã‡Ä±kÄ±ÅŸta perdeyi indir
            localStorage.removeItem('lastAuthTimestamp');
            await signOut(auth);
            // onAuthStateChanged yÃ¶nlendirmeyi yapacak
        };

        // Input Validation (KayÄ±t Olurken)
        window.validateRegister = async (el, type) => {
            clearTimeout(debounceTimer);
            const val = el.value.trim();
            const msgEl = document.getElementById(`${el.id}-msg`);
            
            el.classList.remove('!border-red-500', '!border-green-500');
            msgEl.innerText = "";

            if(type === 'username') {
                if(val.length < 4) {
                    el.classList.add('!border-red-500');
                    msgEl.innerText = "Ã‡ok kÄ±sa balÄ±m (min 4)"; msgEl.className = "text-[10px] text-red-500 font-bold ml-1";
                    return;
                }
                if(val.length > 30 || val.includes(' ')) {
                    el.classList.add('!border-red-500');
                    msgEl.innerText = "BoÅŸluksuz ve max 30 karakter"; msgEl.className = "text-[10px] text-red-500 font-bold ml-1";
                    return;
                }
                
                msgEl.innerText = "Kontrol ediyorum..."; msgEl.className = "text-[10px] text-blue-400 font-bold ml-1";
                debounceTimer = setTimeout(async () => {
                    const q = query(collection(db, "users"), where("username", "==", val));
                    const snap = await getDocs(q);
                    if(!snap.empty) {
                        el.classList.add('!border-red-500');
                        msgEl.innerText = "Bu isim dolu balÄ±m ðŸ˜”"; msgEl.className = "text-[10px] text-red-500 font-bold ml-1";
                    } else {
                        el.classList.add('!border-green-500');
                        msgEl.innerText = "MÃ¼sait âœ“"; msgEl.className = "text-[10px] text-green-500 font-bold ml-1";
                    }
                }, 500);
            }
            if(type === 'password') {
                if(val.length < 6) {
                    el.classList.add('!border-red-500');
                    msgEl.innerText = "Ã‡ok kÄ±sa (min 6)"; msgEl.className = "text-[10px] text-red-500 font-bold ml-1";
                }
            }
        };

        // --- CORE LOGIC ---
        // 1. Initialization Logic (Flicker Killer)
        onAuthStateChanged(auth, async (user) => {
            const now = Date.now();
            const lastAuth = localStorage.getItem('lastAuthTimestamp');
            const isTimeout = lastAuth && (now - parseInt(lastAuth) > SESSION_TIMEOUT);

            if (user && !isTimeout) {
                // User logged in & session valid
                try {
                    const userDoc = await getDoc(doc(db, "users", user.uid));
                    if (userDoc.exists()) {
                        const d = userDoc.data();
                        
                        // Ban Check
                        if (d.bannedUntil && d.bannedUntil.toMillis() > now) {
                            await signOut(auth);
                            alert(`BANLANDIN BALIM! ${d.bannedUntil.toDate().toLocaleString()} tarihine kadar giremezsin.`);
                            currentUserData = null;
                        } else if (d.username === "DELETED_USER") {
                            await signOut(auth);
                            alert("Bu hesap silinmiÅŸ.");
                            currentUserData = null;
                        } else {
                            currentUserData = d;
                            // Update last login silently
                            updateDoc(doc(db, "users", user.uid), { lastLogin: serverTimestamp() });
                            if(!lastAuth) localStorage.setItem('lastAuthTimestamp', now.toString());
                        }
                    } else if (user.email === SUPER_EMAIL) {
                        // First time superuser fallback
                        currentUserData = { username: SUPER_USER, email: SUPER_EMAIL, role: 'superuser' };
                    }
                } catch(e) { console.error("Auth Data Error", e); currentUserData = null; }
            } else {
                // Not logged in or timeout
                if (isTimeout) { await signOut(auth); localStorage.removeItem('lastAuthTimestamp'); }
                currentUserData = null;
            }

            // 2. STATE SETTLED - REMOVE LOADER & ROUTE
            appInitialized = true;
            document.getElementById('global-loader').style.display = 'none';
            router.resolve();
        });

        // 3. Router
        const router = {
            resolve: () => {
                if(!appInitialized) return; // Guard

                let hash = window.location.hash.replace('#/', '').split('?')[0] || 'login';
                
                // --- SECURITY REDIRECTS ---
                if (!currentUserData) {
                    // Not logged in
                    if (!['login', 'register', 'passcode'].includes(hash)) {
                        hash = 'login';
                        window.history.replaceState(null, null, '#/login');
                    }
                } else {
                    // Logged in
                    if (['login', 'register', 'passcode'].includes(hash)) {
                        hash = 'home';
                        window.history.replaceState(null, null, '#/home');
                    }
                }

                // --- BYPASS PREVENTION FOR SUPERUSER ---
                if (hash === 'passcode') {
                    // Passcode sayfasÄ±na dÄ±ÅŸarÄ±dan eriÅŸimi engelle
                    if (auth.currentUser?.email !== SUPER_EMAIL) {
                        hash = 'login'; window.history.replaceState(null, null, '#/login');
                    }
                }

                // --- RENDER ---
                document.querySelectorAll('.page-content').forEach(el => el.classList.add('hidden'));
                
                // Navbar Logic
                const nav = document.getElementById('main-nav');
                if(['login', 'register', 'passcode'].includes(hash)) nav.classList.add('hidden');
                else {
                    nav.classList.remove('hidden');
                    updateNavbar();
                }

                const targetPage = document.getElementById(`page-${hash}`);
                if(targetPage) {
                    targetPage.classList.remove('hidden');
                    // Page Loaders
                    if(hash === 'home') loadHome();
                    if(hash === 'admin') loadAdmin();
                    if(hash === 'post-detail') {
                         const params = new URLSearchParams(window.location.hash.split('?')[1]);
                         loadPostDetail(params.get('id'));
                    }
                    if(hash === 'notifications') loadNotifications();
                    if(hash === 'profile') loadProfile();
                }
                
                if(window.lucide) window.lucide.createIcons();
            }
        };

        window.addEventListener('hashchange', router.resolve);

        // --- PAGE LOGIC ---

        function updateNavbar() {
            document.getElementById('nav-user-name').innerText = currentUserData.username;
            const roleBadge = document.getElementById('role-badge');
            let roleText = "Yetki: KullanÄ±cÄ±";
            let roleColor = "bg-gray-800 text-gray-400";
            
            if(currentUserData.role === 'admin') { roleText = "Yetki: Admin"; roleColor = "bg-blue-900 text-blue-300"; }
            if(currentUserData.role === 'superuser') { roleText = "Yetki: SuperSU"; roleColor = "bg-red-900 text-red-300"; }
            
            roleBadge.className = `text-[10px] font-black uppercase px-2 py-1 rounded ${roleColor}`;
            roleBadge.innerText = roleText;

            // Notification Check
            checkNotifications();
        }

        async function checkNotifications() {
            if(!auth.currentUser) return;
            const q = query(collection(db, `users/${auth.currentUser.uid}/notifications`), where("read", "==", false));
            const snap = await getDocs(q);
            const badge = document.getElementById('notif-dot');
            if(!snap.empty) badge.classList.remove('hidden'); else badge.classList.add('hidden');
        }

        async function loadHome() {
            // Config
            try {
                const sys = await getDoc(doc(db, "system", "config"));
                if(sys.exists()) {
                    document.getElementById('home-ann').innerText = sys.data().announcement || "Duyuru yok balÄ±m.";
                    document.getElementById('home-quote').innerText = sys.data().quote || "SÃ¶z yok balÄ±m.";
                    if(currentUserData.role === 'superuser') {
                        document.getElementById('sys-ann-input').value = sys.data().announcement || "";
                        document.getElementById('sys-quote-input').value = sys.data().quote || "";
                    }
                }
            } catch(e){}

            // SuperUser Tools Visibility
            document.getElementById('su-tools').classList.toggle('hidden', currentUserData.role !== 'superuser');
            document.getElementById('admin-link').classList.toggle('hidden', currentUserData.role === 'user');

            // Posts
            const container = document.getElementById('feed-container');
            container.innerHTML = '<div class="spinner mx-auto"></div>';
            
            const q = query(collection(db, "pages"), orderBy("timestamp", "desc"));
            const snap = await getDocs(q);
            container.innerHTML = '';
            
            if(snap.empty) { container.innerHTML = '<div class="text-center text-gray-500">HenÃ¼z paylaÅŸÄ±m yok balÄ±m.</div>'; return; }

            snap.forEach(d => {
                const p = d.data();
                const canDelete = currentUserData.role === 'superuser' || (currentUserData.role === 'admin' && p.authorId === auth.currentUser.uid) || p.authorId === auth.currentUser.uid;
                const isLong = p.content.length > 150;
                
                const div = document.createElement('div');
                div.className = "glass-card !p-5 mb-4 hover:bg-white/5 transition-colors";
                div.innerHTML = `
                    <div class="flex justify-between items-start mb-2">
                        <h4 onclick="window.location.hash='#/post-detail?id=${d.id}'" class="font-bold text-lg text-blue-300 cursor-pointer break-words flex-1 pr-4 hover:underline">${p.title}</h4>
                        ${canDelete ? `<button onclick="window.deletePost('${d.id}')" class="text-red-500 opacity-50 hover:opacity-100"><i data-lucide="trash-2" class="w-4 h-4"></i></button>` : ''}
                    </div>
                    <p id="p-content-${d.id}" class="text-gray-300 text-sm whitespace-pre-wrap break-words ${isLong ? 'line-clamp-3' : ''}">${p.content}</p>
                    ${isLong ? `<button onclick="this.previousElementSibling.classList.toggle('line-clamp-3'); this.innerText = this.innerText === 'DevamÄ±nÄ± Oku...' ? 'KÄ±salt' : 'DevamÄ±nÄ± Oku...'" class="text-xs text-blue-400 font-bold mt-1">DevamÄ±nÄ± Oku...</button>` : ''}
                    
                    <div class="mt-4 flex justify-between items-center border-t border-white/10 pt-3">
                        <span class="text-[10px] font-bold text-gray-500 uppercase flex items-center gap-1"><i data-lucide="user" class="w-3 h-3"></i> ${p.authorName}</span>
                        <div class="flex items-center gap-3">
                             <div class="flex gap-3 text-xs font-bold text-gray-400">
                                <span class="flex items-center gap-1"><i data-lucide="thumbs-up" class="w-3 h-3 text-green-500"></i> ${p.likeCount || 0}</span>
                                <span class="flex items-center gap-1"><i data-lucide="thumbs-down" class="w-3 h-3 text-red-500"></i> ${p.dislikeCount || 0}</span>
                             </div>
                             <span class="text-[9px] text-gray-600">${formatDate(p.timestamp)}</span>
                        </div>
                    </div>
                `;
                container.appendChild(div);
            });
            if(window.lucide) window.lucide.createIcons();
        }

        async function loadPostDetail(id) {
            const container = document.getElementById('detail-container');
            container.innerHTML = '<div class="spinner mx-auto"></div>';
            
            const docRef = doc(db, "pages", id);
            const snap = await getDoc(docRef);
            if(!snap.exists()) { container.innerHTML = "SilinmiÅŸ."; return; }
            const p = snap.data();

            container.innerHTML = `
                <h2 class="text-2xl font-black mb-2 break-words text-white">${p.title}</h2>
                <div class="text-xs text-gray-500 mb-6 flex gap-4 uppercase font-bold">
                    <span>${p.authorName}</span>
                    <span>${formatDate(p.timestamp)}</span>
                </div>
                <div class="bg-white/5 p-4 rounded-xl text-gray-200 whitespace-pre-wrap break-words mb-6">${p.content}</div>
                
                <div class="flex gap-2 mb-8">
                    <button onclick="window.vote('${id}', 'like')" class="flex-1 py-3 bg-green-500/10 hover:bg-green-500/20 text-green-400 rounded-xl font-bold flex justify-center gap-2"><i data-lucide="thumbs-up" class="w-4 h-4"></i> Like (${p.likeCount||0})</button>
                    <button onclick="window.vote('${id}', 'dislike')" class="flex-1 py-3 bg-red-500/10 hover:bg-red-500/20 text-red-400 rounded-xl font-bold flex justify-center gap-2"><i data-lucide="thumbs-down" class="w-4 h-4"></i> Dislike (${p.dislikeCount||0})</button>
                </div>

                <h3 class="font-bold border-b border-white/10 pb-2 mb-4">Yorumlar</h3>
                <div id="comment-list-${id}" class="space-y-3 mb-6 max-h-60 overflow-y-auto"></div>
                
                <div class="flex gap-2">
                    <input id="comment-in-${id}" class="input-field !py-2" placeholder="Yorum yaz balÄ±m...">
                    <button onclick="window.sendComment('${id}')" class="btn-primary !w-auto !px-4 bg-blue-600"><i data-lucide="send" class="w-4 h-4"></i></button>
                </div>
            `;
            
            // Comments Load
            const cQ = query(collection(db, `pages/${id}/comments`), orderBy("timestamp", "asc"));
            const cSnap = await getDocs(cQ);
            const cList = document.getElementById(`comment-list-${id}`);
            cSnap.forEach(cd => {
                const c = cd.data();
                cList.innerHTML += `
                    <div class="bg-black/30 p-3 rounded-lg border border-white/5">
                         <div class="flex justify-between text-[9px] text-gray-500 uppercase font-bold mb-1"><span>${c.authorName}</span><span>${formatDate(c.timestamp)}</span></div>
                         <div class="text-sm text-gray-300 break-words">${c.text}</div>
                    </div>
                `;
            });
            if(window.lucide) window.lucide.createIcons();
        }

        async function loadAdmin() {
            // Users Table
            const uTbody = document.getElementById('admin-users');
            uTbody.innerHTML = '';
            const uSnap = await getDocs(collection(db, "users"));
            uSnap.forEach(d => {
                const u = d.data();
                uTbody.innerHTML += `
                    <tr class="border-b border-white/5">
                        <td class="p-3">${u.username}</td>
                        <td class="p-3 text-[10px] uppercase font-bold ${u.role==='superuser'?'text-red-400':'text-blue-400'}">${u.role}</td>
                        <td class="p-3 flex items-center gap-2">
                            ${(currentUserData.role==='superuser' || (currentUserData.role==='admin' && u.role==='user')) ? `
                                <select id="ban-u-${d.id}" class="bg-black/40 text-[10px] rounded p-1"><option value="min">Dk</option><option value="hour">Saat</option><option value="day">GÃ¼n</option></select>
                                <input id="ban-t-${d.id}" type="number" class="w-8 bg-black/40 text-[10px] rounded p-1" value="1">
                                <button onclick="window.doBan('${d.id}')" class="text-red-400 bg-red-900/20 p-1 rounded"><i data-lucide="ban" class="w-3 h-3"></i></button>
                                ${currentUserData.role==='superuser' ? `<button onclick="window.nukeUser('${d.id}')" class="text-red-600 bg-red-900/30 p-1 rounded"><i data-lucide="trash-2" class="w-3 h-3"></i></button>` : ''}
                            ` : '-'}
                        </td>
                    </tr>
                `;
            });

            // Requests Table
            const rTbody = document.getElementById('admin-reqs');
            rTbody.innerHTML = '';
            const rSnap = await getDocs(query(collection(db, "requests"), where("status", "==", "pending")));
            if(rSnap.empty) rTbody.innerHTML = '<tr><td colspan="3" class="p-3 text-center text-gray-500 text-xs">Talep yok.</td></tr>';
            rSnap.forEach(d => {
                const r = d.data();
                rTbody.innerHTML += `
                    <tr class="border-b border-white/5">
                        <td class="p-3">${r.username}</td>
                        <td class="p-3 text-xs opacity-60">${r.newEmail}</td>
                        <td class="p-3 flex gap-2">
                            <button onclick="window.decideReq('${d.id}', 'approved', '${r.userId}', '${r.newEmail}')" class="text-green-400 bg-green-900/20 p-1 rounded"><i data-lucide="check" class="w-3 h-3"></i></button>
                            <button onclick="window.decideReq('${d.id}', 'rejected', '${r.userId}')" class="text-red-400 bg-red-900/20 p-1 rounded"><i data-lucide="x" class="w-3 h-3"></i></button>
                        </td>
                    </tr>
                `;
            });
            if(window.lucide) window.lucide.createIcons();
        }

        async function loadNotifications() {
            const cont = document.getElementById('notif-cont');
            cont.innerHTML = '<div class="spinner mx-auto"></div>';
            const q = query(collection(db, `users/${auth.currentUser.uid}/notifications`), orderBy("timestamp", "desc"));
            const snap = await getDocs(q);
            cont.innerHTML = '';
            if(snap.empty) { cont.innerHTML = "Bildirim yok balÄ±m."; return; }
            snap.forEach(d => {
                const n = d.data();
                cont.innerHTML += `
                    <div class="bg-white/5 p-3 rounded-xl mb-2 border-l-2 ${n.read ? 'border-gray-600' : 'border-blue-500'}">
                        <h4 class="font-bold text-sm">${n.title}</h4>
                        <p class="text-xs text-gray-300 mt-1">${n.message}</p>
                        <div class="text-[9px] text-gray-600 text-right mt-1">${formatDate(n.timestamp)}</div>
                    </div>
                `;
                updateDoc(doc(db, `users/${auth.currentUser.uid}/notifications/${d.id}`), { read: true });
            });
            document.getElementById('notif-dot').classList.add('hidden');
        }

        async function loadProfile() {
            document.getElementById('p-user').innerText = currentUserData.username;
            document.getElementById('p-email').innerText = currentUserData.email;
        }

        // --- WINDOW FUNCTIONS (Exposed) ---
        window.createPost = async () => {
            const t = document.getElementById('post-title').value;
            const c = document.getElementById('post-content').value;
            if(!t || !c) return alert("BoÅŸ bÄ±rakma balÄ±m");
            const btn = document.getElementById('btn-post');
            btn.disabled = true;
            try {
                await addDoc(collection(db, "pages"), { title: t, content: c, authorId: auth.currentUser.uid, authorName: currentUserData.username, timestamp: serverTimestamp() });
                document.getElementById('post-title').value = ''; document.getElementById('post-content').value = '';
                loadHome();
            } catch(e) { console.error(e); } finally { btn.disabled = false; }
        };

        window.deletePost = async (id) => { if(confirm("Silmek istediÄŸine emin misin balÄ±m?")) { await deleteDoc(doc(db, "pages", id)); loadHome(); } };
        
        window.saveSystemConfig = async () => {
            if(currentUserData.role !== 'superuser') return;
            const a = document.getElementById('sys-ann-input').value;
            const q = document.getElementById('sys-quote-input').value;
            await setDoc(doc(db, "system", "config"), { announcement: a, quote: q }, {merge:true});
            alert("Sistem gÃ¼ncellendi balÄ±m! âœ“");
            loadHome();
        };

        window.vote = async (pid, type) => {
            const uid = auth.currentUser.uid;
            const voteRef = doc(db, `pages/${pid}/votes/${uid}`);
            const postRef = doc(db, "pages", pid);
            // Simple transaction logic for 1 vote per user
            try {
                await runTransaction(db, async(t) => {
                    const vDoc = await t.get(voteRef);
                    const pDoc = await t.get(postRef);
                    if(!pDoc.exists()) return;
                    let l = pDoc.data().likeCount || 0;
                    let d = pDoc.data().dislikeCount || 0;
                    
                    if(vDoc.exists()) {
                        if(vDoc.data().type === type) return; // Same vote
                        if(vDoc.data().type === 'like') l--; else d--;
                    }
                    if(type === 'like') l++; else d++;
                    t.set(voteRef, { type });
                    t.update(postRef, { likeCount: l, dislikeCount: d });
                });
                loadPostDetail(pid); // Refresh UI
            } catch(e) { console.error(e); }
        };

        window.sendComment = async (pid) => {
            const inp = document.getElementById(`comment-in-${pid}`);
            if(!inp.value.trim()) return;
            await addDoc(collection(db, `pages/${pid}/comments`), { text: inp.value, authorName: currentUserData.username, timestamp: serverTimestamp() });
            inp.value = '';
            loadPostDetail(pid);
        };

        window.doBan = async (uid) => {
            const type = document.getElementById(`ban-u-${uid}`).value;
            const val = parseInt(document.getElementById(`ban-t-${uid}`).value);
            let ms = 0;
            if(type==='min') ms = val*60000; if(type==='hour') ms = val*3600000; if(type==='day') ms = val*86400000;
            await updateDoc(doc(db, "users", uid), { bannedUntil: new Date(Date.now()+ms) });
            alert("BanlandÄ±!");
            loadAdmin();
        };

        window.nukeUser = async (uid) => {
            if(confirm("KullanÄ±cÄ± tamamen silinecek ve banlanacak?")) {
                await setDoc(doc(db, "users", uid), { username: "DELETED_USER", email: "deleted", bannedUntil: new Date(2200, 0, 1) });
                alert("Silindi.");
                loadAdmin();
            }
        };

        window.reqEmail = async () => {
            const m = document.getElementById('new-mail-input').value;
            if(!m.includes('@')) return alert("DÃ¼zgÃ¼n mail gir balÄ±m");
            await addDoc(collection(db, "requests"), { userId: auth.currentUser.uid, username: currentUserData.username, oldEmail: currentUserData.email, newEmail: m, status: 'pending', timestamp: serverTimestamp() });
            alert("Talep gÃ¶nderildi balÄ±m.");
        };

        window.decideReq = async (rid, status, uid, mail) => {
            await updateDoc(doc(db, "requests", rid), { status });
            const msg = status === 'approved' ? `E-posta deÄŸiÅŸim talebin ONAYLANDI. Yeni: ${mail}` : "E-posta deÄŸiÅŸim talebin REDDEDÄ°LDÄ°.";
            await addDoc(collection(db, `users/${uid}/notifications`), { title: "Talep Sonucu", message: msg, read: false, timestamp: serverTimestamp() });
            alert("Ä°ÅŸlem tamam.");
            loadAdmin();
        };

        // --- AUTH FORMS ---
        document.addEventListener('DOMContentLoaded', () => {
            const loginForm = document.getElementById('form-login');
            if(loginForm) {
                loginForm.onsubmit = async (e) => {
                    e.preventDefault();
                    const inp = document.getElementById('login-input').value.trim();
                    const pass = document.getElementById('login-password').value;
                    
                    if(inp === SUPER_USER && pass === SUPER_PASS) { window.location.hash = '#/passcode'; return; }

                    try {
                        let email = inp;
                        if(!inp.includes('@')) {
                            // Username login attempt
                            const q = query(collection(db, "users"), where("username", "==", inp));
                            const snap = await getDocs(q);
                            if(snap.empty) throw {code: 'auth/user-not-found'};
                            email = snap.docs[0].data().email;
                        }
                        await signInWithEmailAndPassword(auth, email, pass);
                        localStorage.setItem('lastAuthTimestamp', Date.now().toString());
                        // Router handles redirect
                    } catch(err) { alert("Hata: " + err.code); }
                };
            }

            const regForm = document.getElementById('form-register');
            if(regForm) {
                regForm.onsubmit = async (e) => {
                    e.preventDefault();
                    const u = document.getElementById('reg-user').value.trim();
                    const em = document.getElementById('reg-email').value.trim();
                    const p = document.getElementById('reg-pass').value;
                    if(p !== document.getElementById('reg-pass2').value) return alert("Åžifreler uyuÅŸmuyor!");
                    
                    // Final Duplicate Check
                    const q = query(collection(db, "users"), where("username", "==", u));
                    const snap = await getDocs(q);
                    if(!snap.empty) return alert("Bu isim kapÄ±lmÄ±ÅŸ balÄ±m!");

                    try {
                        const cred = await createUserWithEmailAndPassword(auth, em, p);
                        await setDoc(doc(db, "users", cred.user.uid), { username: u, email: em, role: 'user', createdAt: serverTimestamp() });
                        logAction('register', cred.user.uid, em);
                        alert("KayÄ±t BaÅŸarÄ±lÄ± BalÄ±m!");
                        // Router handles redirect
                    } catch(err) { alert(err.message); }
                };
            }

            const passForm = document.getElementById('form-passcode');
            if(passForm) {
                passForm.onsubmit = async (e) => {
                    e.preventDefault();
                    if(document.getElementById('passcode-input').value === SECURITY_CODE) {
                        try {
                            // Ensure superuser exists in firestore
                            const cred = await signInWithEmailAndPassword(auth, SUPER_EMAIL, SUPER_PASS).catch(async () => {
                                return await createUserWithEmailAndPassword(auth, SUPER_EMAIL, SUPER_PASS);
                            });
                            await setDoc(doc(db, "users", cred.user.uid), { username: SUPER_USER, email: SUPER_EMAIL, role: 'superuser' }, {merge:true});
                            window.location.hash = '#/home';
                        } catch(err) { alert(err.message); }
                    } else alert("YanlÄ±ÅŸ Kod!");
                }
            }

            // Init particles
            const pCont = document.getElementById('particles');
            for(let i=0; i<30; i++) {
                const p = document.createElement('div');
                p.className = 'particle';
                const size = Math.random()*150+50;
                p.style.width=size+'px'; p.style.height=size+'px';
                p.style.left=Math.random()*100+'%'; p.style.top=Math.random()*100+'%';
                p.style.background = `radial-gradient(circle, rgba(${Math.random()*255},255,255,0.15) 0%, transparent 70%)`;
                p.style.animationDuration = Math.random()*15+10+'s';
                pCont.appendChild(p);
            }
        });

    </script>
